<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="TitleTextAppearance" parent="TextAppearance.AppCompat">

        <item name="android:background">@color/secondaryColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="SecondaryTextAppearance" parent="TextAppearance.AppCompat">

        <item name="android:background">@color/secondaryTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

    <style name="RegularTextAppearance" parent="TextAppearance.AppCompat">

        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondaryDarkColor</item>
    </style>

</resources>
